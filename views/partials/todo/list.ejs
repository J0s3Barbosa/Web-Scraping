<script>
  $(document).ready(function () {

    loadData();
    
    $("#btnloadData").click(function () {
      loadData();
    });


  });
  function loadData() {
      $.get("/todo/all", function (data, status) {
        if (status == "success") {
          var txt = '';
          txt += "<div class='table-responsive'>"
          txt += "<table class='table table-hover '>"
          txt += "<thead>"
          txt += "<tr>"
          txt += "<th>_id</th>"
          txt += "<th>Task</th>"
          txt += "<th>Completed</th>"
          txt += "<th>Owner</th>"
          txt += "<th>Created_At</th>"
          txt += "</thead>"
          txt += "</thead>"
          txt += "<tbody>"
          for (var i = 0; i < data.length; i++) {
            txt += "<tr>"
            txt += "<td>" + data[i]._id + "</td>";
            txt += "<td>" + data[i].Task + "</td>";
            txt += "<td>" + data[i].Completed + "</td>";
            txt += "<td>" + data[i].Owner + "</td>";
            txt += "<td>" + data[i].Created_At + "</td>";
            txt += "</tr>"

          }
          txt += "</tbody>"
          txt += "</table>"
          txt += "</div>"
          document.getElementById("divloadData").innerHTML = txt;

        }

        if (status == "error") {
          alert("Error: " + status);
        }

      });

    }

</script>

<div class="panel panel-default">
  <div class="panel-body">

    <h2>Data</h2>
    <div id="divloadData"></div>

    <button id="btnloadData" class="btn btn-primary">Load Data</button>

  </div>
</div>